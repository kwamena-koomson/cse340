<% if (title){ %>
    <h1><%= title %></h1>
<% } else { %>
    <%- res.redirect("/") %>
<% } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
<% }) %>
    </ul>
<% } %>

<h2>Welcome <%- locals.accountData.account_firstname %></h2>
<p><a href="/account/update">Edit Account Information</a></p>

<% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv">Manage Inventory</a></p>
<% } else if (locals.accountData.account_type === "Client") { %>
    <%- MyReviews %>
<% } %>
